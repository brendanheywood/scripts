#!/usr/bin/perl

use strict;
use Data::Dumper;
use POSIX;
use Term::ANSIColor;
use Time::HiRes qw (sleep);
use Term::ReadKey;

my @lines = <STDIN>;

my $state;
$state->{'grep'} = $ARGV[0];
$state->{'x'} = 0;
$state->{'y'} = 0;
$state->{'lines'} = @lines;
$state->{'draw'} = 0;

# print Dumper($state);
# exit;
sub draw {
    my ($st) = @_;
    my @size = Term::ReadKey::GetTerminalSize STDOUT;

    $st->{maxx} = $size[0];
    $st->{maxy} = $size[1];

    # Reset the window, don't do it the first time
    if ($st->{draw}++ > 0){
        print "\e[H"; # reset
        # print "\e[J"; # clear
    }

    # Draw a sticky file header

    # Draw the lines we want
    my $height = $st->{maxy} - 1;
    $st->{h} = $height;
    my $y1 = $st->{y};
    my $y2 = $y1 + $height - 0;
    my $width = $st->{maxx} - 1;
    $st->{w} = $width;
    my $x1 = $st->{x};
    my $x2 = $x1 + $width - 5;

    for (my $y = $y1; $y < $y2; $y++){
        my $line = $lines[$y];
        chomp $line;
        printf ' %-' .$width."s\n", substr($line, $x1, $width);
    }

    # If the number of rows is more than the screen height then
    # Draw a position and status bar

# print Dumper($st);

# search terms
# print $state->{grep};
    print "\e[7m"; # invert
    print " lines ".($y1+1)."-$y2 ";
    print "\e[27m"; # reset invert
    print "\e[?25l"; # no blinking cursor
    # print "crap\n";
}

draw($state);

open my $TTY, '<', '/dev/tty';
ReadMode('cbreak', $TTY);

$SIG{INT} = sub {
    ReadMode('normal', $TTY);
    exit;
};

my $buffer = '';

while (1) {
    my $char = ReadKey(-1, $TTY);
    if (!defined $char){

        if ($buffer){
            if (    $buffer == '27'        # esc
                 || $buffer == '113')    { # q
                last;
            } elsif($buffer == '279165') { # up
                $state->{'y'}--;
            } elsif($buffer == '279166') { # down
                $state->{'y'}++;
            } elsif($buffer == '279168') { # left
                $state->{'x'}-= 4;
            } elsif($buffer == '279167') { # right
                $state->{'x'}+= 4;
            } elsif($buffer == '279153126') { # page up
                $state->{'y'}-= $state->{h};
            } elsif($buffer == '279154126') { # page down
                $state->{'y'}+= $state->{h};
            }
            if ($state->{x} < 0 ){ $state->{x} = 0; }
            if ($state->{y} < 0 ){ $state->{y} = 0; }
            draw($state);
            print "buffer: '$buffer'";
        }

        $buffer = '';
        sleep (0.005);
        next;
    }

    $buffer .= ord($char);
}

print "\n";

ReadMode('normal', $TTY);
close $TTY;

