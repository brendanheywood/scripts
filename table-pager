#!/usr/bin/perl

use utf8;
use strict;
use Data::Dumper;
use POSIX;
use Term::ANSIColor;
use Time::HiRes qw (sleep);
use Term::ReadKey;


binmode STDOUT, ":utf8";

# Colors see http://misc.flogisoft.com/bash/tip_colors_and_formatting

my @lines = <STDIN>;


my @header = split('\|', shift @lines);

shift @lines; # this is the ---+--+-- line

pop @lines; # 1 blank line at end
pop @lines; # 2 blank line at end

# print Dumper(@header);
# exit;

# print @lines;
# print "EOFEOF";
# exit;


my $state;
$state->{'x'} = 0;
$state->{'y'} = 0;
$state->{'head'} = \@header;
$state->{'lines'} = @lines;
$state->{'draw'} = 0;
$state->{'lockcol'} = 1;

# print Dumper($state);
# exit;
sub draw {
    my ($st) = @_;

    my $f = '┌─┬╥┐     '.
            '│ │║│     '.
            '├─┼╫┤     '.
            '└─┴╨┘     ';

    my $colc = "\e[34m"; # blue fg    - color column
    my $cold = "\e[39m"; # default fg - color header
    my $colh = "\e[32m"; # green fg   - color data
    my $coln = "\e[90m"; # yellow fg  - color row num


    # Calc the viewport size
    my @size = Term::ReadKey::GetTerminalSize STDOUT;
    $st->{maxx} = $size[0];
    $st->{maxy} = $size[1];

    my $height = $st->{maxy} - 1;
    $st->{h} = $height;
    my $y1 = $st->{y};
    my $y2 = $y1 + $height - 13; # 4 lines of chrome to take off
    my $width = $st->{maxx} - 1;
    $st->{w} = $width;
    my $x1 = $st->{x};
    my $x2 = $x1 + $width - 5;


    # Reset the window, don't do it the first time
    if ($st->{draw}++ > 0){
        print "\e[H"; # reset
        print "\e[J"; # clear
    }

    my @head = @{ $st->{head} };

    # Draw a sticky file header

    my $remainder = $width; # How many visible chars left on the screen?

    # How many rows do we have? So how wide is that number?
    my $nw = length(($#lines+1) . '');
    #
    my $l1 = $colc
           . substr($f,1,1) x $nw
           . substr($f,2,1)
           . $colc;
    my $l2 = $coln
           . ' ' x ($nw-1) . '#'
           . $colc
           . substr($f,12,1);
    my $l3 = substr($f,1,1) x $nw
           . substr($f,22,1);

    $remainder -= ($nw + 1); # width of number col

    my $col = 0;
    my $w;

    my $head;


    # Draw the locked header cols
    for(; $col<$st->{lockcol}; $col++){

        $head = $head[$col];
        chomp $head;
        $w = length($head);

        $l1 .= substr($f, 1,1) x $w;
        $l1 .= substr($f, 3,1);

        $l2 .= $colh;
        $l2 .= sprintf("%-".$w."s", $head);
        $l2 .= $colc;
        $l2 .= substr($f,13,1);

        $l3 .= substr($f,21,1) x $w;
        $l3 .= substr($f,23,1);

        $remainder -= ($w + 1); # width of number col
    }


    my $processed = 0; # how many chars have we processed?
    my $seen = 0; # how many chars of scrolling header have we seen so far?
    my $colsleft = $#head - $col + 1;

    $remainder -= $colsleft; # Remove 1 char for cols that could be squished


    # Draw the scrolling header cols
    for(; $col<=$#head; $col++){
        $head = $head[$col];
        chomp $head;
        $w = length($head) + 1; # add 1 for the border
        $head =~ s/^\s+/ /g;

        my $offset = 0; # how much of this header will we show?

        # There are 5 scenarios:
        # 1) cropped from the left completetly
        printf "%-3d %-2d %-2d %-2d %s", $processed, $seen, $x1, $w, $remainder, $head;
        if ($x1 >= $processed + $w){
            $processed += $w;
            print "seen\n";
            $w = 0;

        # 2) cropped from the left partially
        } elsif ($x1 > $processed ) {
            print "left\n";
            $offset = $x1 - $processed;
            $processed += $w;
            $w -= $offset;
            # $seen += $w;
            # $remainder -= $w;

            # what if the screen is too small for a single field?
            # crop on right too

        # 3) showing the lot
        # } elsif ($x1 < $seen) {
} else {
            $processed += $w;
            print "middle\n";
            # $seen += $w;
            # $remainder -= $w;
        # 4) cropped on the right

        # 5) squished
        # } else {
            # $processed += $w;
            # print "drop\n";
            # last;
        }


        if ($w > 0){

            $l1 .= substr($f,1,1) x ($w-1);
            $l1 .= substr($f,2,1);

            $l2 .= $colh;
            $l2 .= sprintf("%-".($w-1)."s", substr($head,$offset,$w) );
            $l2 .= $colc;
            $l2 .= substr($f,12,1);

            $l3 .= substr($f,21,1) x ($w-1);
            $l3 .= substr($f,22,1);

        }

    }

    # draw the minified col heads


    $l1 .= substr($f, 4,1);
    $l2 .= substr($f,14,1);
    $l3 .= substr($f,24,1);


$l1 .= "=$remainder ";
$l1 .= "left = $colsleft ";
    print "$l1\n$l2\n$l3\n";


    my $file = '';
    my $lnum = -1;
    my $text = '';
    my $mode = '';
    for (my $y = $y1; $y < $y2; $y++){
        my $line = $lines[$y];
        chomp $line;

        $col = 0;
        my @parts = split('\|', $line);

        # print row number
        print $coln;
        printf "%".$nw."s", $y+1;
        print $colc;
        print substr($f,12,1);

        # Draw the locked header cols
        for(; $col<$st->{lockcol}; $col++){

            $head = $head[$col];
            chomp $head;
            $w = length($head);

            print $cold;
            print sprintf("%-".$w."s", $parts[$col]);
            print $colc;
            print substr($f,13,1);

        }



        $line = join(substr($f,12,1), @parts);

        print substr($f,12,1);
        print $cold;
        printf "%s", substr( $line, $x1, $width);
        print $colc;

        print substr($f,12,1);
        print "\n";
    }

    # If the number of rows is more than the screen height then
    # Draw a position and status bar

# print Dumper($st);

    print "\e[39m"; # default fg
    print "\e[7m"; # invert
    print " Rows ".($y1+1)."-$y2 / ". ($#lines+1). ' ';
    printf "%d% ", 100 * ($y2 / ($#lines+1)); # per %
    print " $x1 ";

    print "\e[27m"; # reset invert
    print "\e[?25l    "; # no blinking cursor
}

draw($state);

open my $TTY, '<', '/dev/tty';
ReadMode('cbreak', $TTY);

$SIG{INT} = sub {
    ReadMode('normal', $TTY);
    print "\n";
    print "\e[?25h    "; # reset blinking cursor
    exit;
};

my $buffer = '';

while (1) {
    my $char = ReadKey(-1, $TTY);
    if (!defined $char){

        if ($buffer){

            my $per;
            my $lh = $#lines - $state->{h} + 4; # lines of chrome

            if (    $buffer == '27'        # esc
                 || $buffer == '113')    { # q
                last;
            } elsif($buffer == '10') { # up
                $state->{selected} = 1;
                last;
            } elsif($buffer == '279165') { # up
                $state->{'y'}--;
                # $state->{'cursor'}--;
            } elsif($buffer == '279166') { # down
                $state->{'y'}++;
                # $state->{'cursor'}++;
            } elsif($buffer == '279168') { # left
                $state->{'x'}-= 1;
            } elsif($buffer == '279167') { # right
                $state->{'x'}+= 1;
            } elsif($buffer == '279153126') { # page up
                $state->{'y'}-= $state->{h};
            } elsif($buffer == '279154126'    # page down
                 || $buffer == '32') {        # space
                $state->{'y'}+= $state->{h};
            } elsif ($buffer >= '48' and $buffer <= '57'){        # 1 = 10%, 9 = 90%
                $per = $buffer*1 - 48;
                if ($per == 0){ $per = 10; }
                $per--;
                $state->{'y'} = floor($per * $lh / 9);
            }

            # Don't go out of bounds
            if ($state->{x} < 0 ){ $state->{x} = 0; }
            if ($state->{y} < 0 ){ $state->{y} = 0; }
            if ($state->{y} > $lh){ $state->{y} = $lh; }


            draw($state);
            print "buffer: '$buffer' $per";
        }

        $buffer = '';
        sleep (0.005);
        next;
    }

    $buffer .= ord($char);
}

print "\n";

ReadMode('normal', $TTY);
print "\e[?25h"; # reset blinking cursor
print "\e[21m"; # not bold
print "\e[39m"; # default fg
print "\e[49m"; # default bg
close $TTY;

# TODO
