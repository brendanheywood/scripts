#!/usr/bin/perl

use strict;
use Data::Dumper;

my @lines = `git shortlog --summary --numbered --email`;
my %hosts;

# manual: git shortlog --summary --numbered --email | grep  XYZ
# then google them to find more details and track who they are

my %map = (
