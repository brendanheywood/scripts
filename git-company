my $c = 0;
foreach my $line (@lines){

    # if ($c++ > 200){ last; }

    $line =~ /(\d+)(.*)/;
    my $num = $1;
    my $user = $2;
    my $company = '?';
    if ($user =~ /<(.*@(.*))>/){
        if ($map{$1}){
            $company = $map{$1};
        } elsif ($user =~ /gmail|hotmail|yahoo/){
            $company = $user;
        } else {
            $company = $2;
        }
    } elsif ($user =~ /<(.*)>/){
        $company = $1;
    }
    my $host = $company;
    if ($map{$host}){
        $host = $map{$host};
    }
    # print "$num = $user = $host\n";
    if ($hosts{$host}){
        $hosts{$host} += $num;
    } else {
        $hosts{$host} = $num;
    }
}

foreach my $host (sort keys %hosts) {
    printf "%-8d %s\n", $hosts{$host}, $host;
}

# print Dumper(%hosts);
